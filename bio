struct bio: 
/linux/bio.h 

(1) sector_t bi_sector 
one sector is 512 bytes 
(2) unsigned int bi_size  
size in bytes 


enum bio_rw_flags {
         BIO_RW,
         BIO_RW_FAILFAST_DEV,
         BIO_RW_FAILFAST_TRANSPORT,
         BIO_RW_FAILFAST_DRIVER,
         /* above flags must match REQ_* */
         BIO_RW_AHEAD,
         BIO_RW_BARRIER,
         BIO_RW_SYNCIO,
         BIO_RW_UNPLUG,
         BIO_RW_META,
         BIO_RW_DISCARD,
         BIO_RW_NOIDLE,
 };
